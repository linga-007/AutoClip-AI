{
  "manifest_version": 3,
  "name": "Quick Highlight & Save",
  "description": "Right-click a selection and save it to Notion (auto-formats with URL, timestamp, tags, and AI summary).",
  "version": "1.0.0",
  "permissions": [
    "contextMenus",
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "clipboardWrite"
  ],
  "host_permissions": [
    "https://api.notion.com/*",
    "https://api.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icons.png"
    
  }
}
